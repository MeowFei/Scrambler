{
  "manifest_version": 2,

  "name": "Scramble whatever",
  "description": "This extension makes news articles more fun using a variation on the suggestions in XKCD 1625.",
  "version": "0.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/", "activeTab"
  ],

  "background": {
    "scripts": ["content.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Make this page fun!",
    "default_icon": {
      "19": "img/sub19.png",
      "38": "img/sub38.png",
      "128": "img/sub128.png"
    }
  }
}